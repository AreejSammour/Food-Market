@* my ticket - for the logged in user *@


@model List<Food_Market.Models.Ticket>

<h1>My Tickets</h1>

@* tickets from the logged in user *@

<style>
    .ticketdiv {
        margin-bottom: 10px;
        padding: 16px;
        max-width: 600px;
        min-width: 60%;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }
</style>

@foreach (var ticket in Model)
{
    <div class="ticketdiv">
        <strong><span>Ticket number# </span></strong>
        @Html.DisplayFor(modelItem => ticket.TicketId)
        <br />

        <strong><span>Subject: </span></strong>
        @Html.DisplayFor(modelItem => ticket.Subject)
        <br />

        <strong><span>Message: </span></strong>
        @Html.DisplayFor(modelItem => ticket.Message)
        <br /><br />

        <strong><span>Response: </span></strong> <br />
        @if (string.IsNullOrEmpty(ticket.Response))
        {
            <em>Pending</em>
        }
        else
         @Html.DisplayFor(modelItem => ticket.Response)
        <br />
    </div>
}
